<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--The 1st main color of background of pannels / Color of text on the 2nd background color-->
    <SolidColorBrush x:Key="MainBlue" Color="#193891"/>

    <!--The 2nd main color of background of pannels / Color of text on the 1nd background color-->
    <SolidColorBrush x:Key="MainWhiteGold" Color="#FFF6E7"/>

    <!--Button's backgorund colour-->
    <SolidColorBrush x:Key="ButtonsBackground" Color="#36091F"/>
    <SolidColorBrush x:Key="MouseOverButtonsBackground" Color="#600B0B"/>

    <!--Card Border's colour Mouse Over-->
    <SolidColorBrush x:Key="MouseOverCardBorder" Color="#FFBA5B"/>


</ResourceDictionary>